<!-- Simplfying forms by using simple_form GEM -->
<!-- Instructions available at github -->
<!-- Add Gem to gem file, run command line and amend this code -->
<!-- 'f' is the variable inside the pipes -->
<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :address %>
  <%= f.input :photo %>
  <%= f.input :body %>
  <%= f.input :cuisine %>
  <%= f.input :price %>
  <%= f.input :score %>
  <%= f.input :ambiance %>

  <%= f.button :submit %>
<% end %>
